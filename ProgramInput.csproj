<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>.NET Program Input</Title>
    <Authors>Junjinjen</Authors>
    <RepositoryUrl>https://github.com/Junjinjen/ProgramInput</RepositoryUrl>
    <PackageTags>input</PackageTags>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <Version>1.0.0</Version>
    <RepositoryType>git</RepositoryType>
    <Description>Simple input simulation library for Windows</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Update="LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
